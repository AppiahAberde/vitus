    <div class="container p-5 justify-content-center align-items-center">
        <p class="display-5 text-muted text-center">Login</p>
        <div class="text-center">
            <form action="/login" method="POST">
                <div class="form-row">
                    <input type="password" name="pass" placeholder="Enter Code Here" />                    
                </div>  
                <div class="form-row">
                    <button class="btn btn-outline-success mt-3">Submit</button>
                </div>             
            </form>
        </div>
    </div>
